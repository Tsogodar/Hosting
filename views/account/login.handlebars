<div class="container">
    <div class="col s6">
        <div class="card card-body">
            <h3 class="center-align">Logowanie</h3>
            <form action="/auth/login" method="post" class="authForm">
                <div class="input-field col s6">
                    <input id="email" type="email" name="emailInput" required>
                    <label for="email">E-mail</label>
                </div>
                <div class="input-field col s6">
                    <input id="password" type="password" name="passwordInput" required>
                    <label for="password">Has≈Ço</label>
                </div>
                <button type="submit" class="btn loginBtn">Zaloguj</button>
                <a href="/auth/login/google" class="loginGoogle btn orange darken-2">Zaloguj przez Google</a>
            </form>
        </div>
    </div>
</div>