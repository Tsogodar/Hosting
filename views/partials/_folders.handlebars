<div class="foldersSection mb-5">
    {{#each openedFolder}}
        <h4>
            {{#if copies}}
                {{name}}({{copies}})
            {{else}}
                {{name}}
            {{/if}}
            <small>
                <i class="fa fa-pencil" aria-hidden="true" data-toggle="modal"
                   data-target="#changeFolderNameModal"></i>
            </small>
        </h4>
    {{/each}}
    {{#if folders}}
        <h3>Foldery</h3>
    {{/if}}
    {{#each folders}}
        <div class="folder">
            <div class="folderTitle">
                <i class="fa fa-folder" aria-hidden="true"></i>
                {{#if copies}}
                    {{name}}({{copies}})
                {{else}}
                    {{name}}
                {{/if}}
            </div>
            <div class="folderMenu">
                <div class="folderActions">
                    {{#if shared}}
                        <a href="/folder/unshare/{{_id}}" title="Anuluj udostępnianie">
                            <i class="fa fa-ban" aria-hidden="true"></i>
                        </a>
                    {{else}}
                    <a href="/folder/share/{{_id}}" title="Udostępnij">
                        <i class="fa fa-share-alt" aria-hidden="true"></i>
                    </a>
                    {{/if}}
                </div>
                <div class="folderActions">
                    <a href="/folder/{{_id}}" title="Otwórz">
                        <i class="fa fa-folder-open" aria-hidden="true"></i>
                    </a>
                </div>
                <div class="folderActions">
                    <a href="/folder/remove/{{_id}}" title="Usuń">
                        <i class="fa fa-trash" aria-hidden="true"></i>
                    </a>
                </div>
            </div>
            <span class={{_id}}></span>
        </div>
    {{/each}}
</div>

