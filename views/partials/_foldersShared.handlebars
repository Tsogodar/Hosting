<div class="foldersSection mb-5">
    {{#each folders.shared}}
        <h4>
            {{#if copies}}
                {{name}}({{copies}})
            {{else}}
                {{name}}
            {{/if}}
        </h4>
    {{/each}}
    {{#if folders}}
        <h3>Foldery</h3>
    {{/if}}
    {{#each folders}}
        <div class="folder">
            <div class="folderTitle">
                <i class="fa fa-folder" aria-hidden="true"></i>
                {{#if copies}}
                    {{name}}({{copies}})
                {{else}}
                    {{name}}
                {{/if}}
            </div>
            <div class="folderMenu">
                <div class="folderActions">
                </div>
                <div class="folderActions">
                    <a href="/shared/{{_id}}" title="OtwÃ³rz">
                        <i class="fa fa-folder-open" aria-hidden="true"></i>
                    </a>
                </div>
            </div>
            <span class={{_id}}></span>
        </div>
        <h1>{{sharedId}}</h1>
    {{/each}}
</div>

